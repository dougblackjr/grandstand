.top-bar
	.topnav.expanded.row
		.logo-text.medium-1.columns
			%span.logo-text Grandstand
		.user-text.medium-4.columns
			%ul.menu
				- if user_signed_in?
					%li Logged in as #{current_user.email}
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
				- else
					%li
						= link_to "Log In", new_user_session_path