!!!
%html
%head
	%title Grandstand - Music Display
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Baloo+Thambi|Montserrat'
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%header.logo-bar
		= render 'shared/navbar'

	%content-box.row.off-canvas-content{"data-off-canvas-content"=>""}
		%section.side-menumedium-2.show-for-medium.columns.off-canvas.position-left{"id"=>"offCanvasLeft","data-off-canvas"=>"","data-transition"=>"push"}
			%p Side menu

		%section.main-content.medium-10.small-12.columns.off-canvas-content{"data-off-canvas-content"=>""}
			%button.button{"type"=>"button", "data-toggle"=>"offCanvasLeft"}
				%i.fi-list
			- if notice
				%p.alert.alert-success= notice
			- if alert
				%p.alert.alert-danger= alert
			= yield
	
	%footer.footer-content.row
		.footer-content.small-12.columns
			%p Copyright 2016